generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(uuid())
  username     String  @unique
  email        String  @unique
  password     String
  refreshToken String? @db.VarChar(512)

  Pemasukans   Pemasukan[]
  Pengeluarans Pengeluaran[]
  Laporans     Laporan[]
  OTPs         OTP[]
}

model OTP {
  id           String   @id @default(uuid())
  email        String
  otp          String
  createdAt    DateTime @default(now())
  User         User?    @relation(fields: [userId], references: [id])
  userId       String?
  tempUserData Json?
}

model EducationContent {
  id          String   @id @default(uuid())
  title       String
  description String   @db.VarChar(500)
  content     String? // Optional content for hover text
  imageUrl    String
  source      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Pemasukan {
  idTransaksiPemasukan String   @id @default(uuid())
  idUser               String
  jumlah               Float
  deskripsi            String
  tanggal              DateTime @default(now())
  kategori             String
  sumber               String

  user    User     @relation(fields: [idUser], references: [id])
  Laporan Laporan?
}

model Pengeluaran {
  idTransaksiPengeluaran String   @id @default(uuid())
  idUser                 String
  jumlah                 Float
  deskripsi              String
  tanggal                DateTime @default(now())
  kategori               String
  sumber                 String
  lampiran               String?

  user    User     @relation(fields: [idUser], references: [id])
  Laporan Laporan?
}

model Laporan {
  idLaporan              String   @id @default(uuid())
  idUser                 String
  idTransaksiPengeluaran String?  @unique
  idTransaksiPemasukan   String?  @unique
  keterangan             String
  tanggal                DateTime @default(now())

  user        User         @relation(fields: [idUser], references: [id])
  pemasukan   Pemasukan?   @relation(fields: [idTransaksiPemasukan], references: [idTransaksiPemasukan])
  pengeluaran Pengeluaran? @relation(fields: [idTransaksiPengeluaran], references: [idTransaksiPengeluaran])
}
